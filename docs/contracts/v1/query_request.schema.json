{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QueryRequest",
  "type": "object",
  "required": ["query", "project"],
  "properties": {
    "query": {
      "type": "string",
      "minLength": 1
    },
    "project": {
      "type": "string",
      "minLength": 1
    },
    "purpose": {
      "type": "string"
    },
    "chunk_strategy": {
      "type": "string"
    },
    "top_k": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    }
  },
  "additionalProperties": false
}
